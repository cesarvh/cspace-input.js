                <TextInput
                  name="dateEarliestSingleQualifierValue"
                  value={value.get('dateEarliestSingleQualifierValue')}
                  onCommit={this.handleInputCommit}
                />
              </td>
              <td>
                <PrefixFilteringDropdownMenuInput
                  name="dateEarliestSingleQualifierUnit"
                  value={value.get('dateEarliestSingleQualifierUnit')}
