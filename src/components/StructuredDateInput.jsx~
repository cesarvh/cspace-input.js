              </td>
              <td>
                <TextInput
                  name="dateEarliestSingleDay"
                  value={value.get('dateEarliestSingleDay')}
                  onCommit={this.handleInputCommit}
                />
              </td>
              <td>
                <PrefixFilteringDropdownMenuInput
                  name="dateEarliestSingleEra"
                  value={value.get('dateEarliestSingleEra')}
